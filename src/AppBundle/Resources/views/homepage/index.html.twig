          </section>
      </div>
    </div>

    <div id="content-below" class="wrapper">
      <div class="container">
        <div class="row">
          <div class="upsell">
            <small class="muted">Ak sa chcete dozvedieť, kedy spustíme ďaľšie funkcie tejto stránky, zadajte svoj mail do formulára v pätičke.</small>
        </div>
    </div>
    </div>
    </div>

    <!-- ======== @Region: #content ======== -->
    <div id="content">
      <div class="container">
        <!-- Services -->
        <div class="block features">
          <h2 class="title-divider"><a name="add-suggestion"></a>
            <span>Pridať <span class="de-em">podnet</span></span>
            <small>Pridajte váš podnet na zlepšenie školstva.</small>
        </h2>
        <div class="row">
            {% if showForm %}
            {{ form_start(form, { 'attr' : { 'class': 'form-wrapper' } }) }}
                {{ form_errors(form) }}

                {{ form_row(form.category) }}
                {{ form_row(form.email) }}
                {{ form_row(form.text, { 'attr': { 'rows': '20' }}) }}
            {{ form_end(form) }}
            {% else %}
                <div class="alert alert-success">
                  <h4>
                    Ďakujeme!
                  </h4>
                  Váš podnet bol odoslaný na schválenie a objaví sa tu čoskoro.
                </div>
            {% endif %}
        </div>
    </div>
    <!--Customer testimonial-->
    <div class="block testimonials margin-top-large"> <a name="newest-suggestions"></a>
      <h2 class="title-divider">
        <span>Najnovšie <span class="de-em">podnety</span></span>
        <small>Už čoskoro tu uvidíte prehľadne kategorizované <strong>všetky</strong> podnety. Tu je zatiaľ zopár najnovších:</small>
    </h2>
    <div class="row">
        <div class="panel-group panel-group-list-style" id="list-accordion">
            {% for sug in suggestions %}
                <div class="panel panel-default">
                  <div class="panel-heading"> <a data-toggle="collapse" data-parent="#list-accordion" href="#collapse{{loop.index}}" class="panel-title collapsed" aria-expanded="false">Pridané v kategórii <strong>{{sug.category}}</strong> dňa <em>{{sug.created |date("d. m. Y")}}</em></a> </div>
                  <div id="collapse{{loop.index}}" class="collapse" aria-expanded="false" style="height: 0px;">
                    <div class="panel-body">{{sug.text|nl2br}}</div>
                  </div>
                </div>
            {% endfor %}

        </div>
    </div>
    </div>
    </div>
    </div>

    <!-- ======== @Region: #content-below ======== -->
    <div id="content-below" class="wrapper">
      <div class="container">
        <div class="row">
          <div class="upsell">
            <small class="muted">Ak sa chcete dozvedieť, kedy spustíme ďaľšie funkcie tejto stránky, zadajte svoj mail do formulára v pätičke.</small>
        </div>
    </div>
    </div>
    </div>
    {% endblock %}

    {% block mailForm %}
        {% if showMailingForm %}
            {{ form_start(mailingForm) }}
                {{ form_errors(mailingForm) }}
                <div class="input-group input-group-sm">
                  <label class="sr-only" for="email-field">Email</label>
                  {{ form_widget(mailingForm.email) }}
                    <span class="input-group-btn">
                        {{ form_widget(mailingForm.fingerprint) }}
                        {{ form_widget(mailingForm.submit) }}
                    </span>
                </div>
            {{ form_end(mailingForm) }}
        {% else %}
            <small><strong>Ďakujeme, váš e-mail bol pridaný.</strong></small>
        {% endif %}
    {% endblock %}